<StackLayout xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" Spacing="0" xmlns="http://xamarin.com/schemas/2014/forms">
	<ContentView Padding="0,5,0,5" HorizontalOptions="Start">
		<Label LineBreakMode="WordWrap" HorizontalTextAlignment="Start" FontSize="24" TextColor="Navy" TextType="Html"><![CDATA[Tables &amp; Notes]]></Label>
	</ContentView>
	<ContentView Padding="0,5,0,5" HorizontalOptions="Start">
		<Label LineBreakMode="WordWrap" HorizontalTextAlignment="Start" TextType="Html"><![CDATA[This example mixes footnotes<sup id="fnref-1"><a href="#fn-1" class="footnote-ref">1</a></sup> and tables.]]></Label>
	</ContentView>
	<ContentView Padding="0,5,0,5" HorizontalOptions="Start">
		<Label LineBreakMode="WordWrap" HorizontalTextAlignment="Start" FontSize="22" TextColor="Navy" TextType="Html"><![CDATA[Table with large cells]]></Label>
	</ContentView>
	<ContentView Padding="0,5,0,5">
		<Grid RowSpacing="-2" ColumnSpacing="-2">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>
			<Frame Padding="0,0,0,0" BorderColor="Gray" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2">
				<ContentView Padding="5,2,5,2" HorizontalOptions="Start">
					<Label LineBreakMode="WordWrap" HorizontalTextAlignment="Start" TextType="Html" FontAttributes="Bold"><![CDATA[&nbsp;]]></Label>
				</ContentView>
			</Frame>
			<Frame Padding="0,0,0,0" BorderColor="Gray" Grid.Column="0" Grid.Row="1">
				<ContentView Padding="5,2,5,2">
					<StackLayout>
						<ContentView Padding="0,5,0,5" HorizontalOptions="Start">
							<Label LineBreakMode="WordWrap" HorizontalTextAlignment="Start" TextType="Html"><![CDATA[First cell, first row]]></Label>
						</ContentView>
						<ContentView Padding="0,5,0,5" HorizontalOptions="Start">
							<Label LineBreakMode="WordWrap" HorizontalTextAlignment="Start" TextType="Html"><![CDATA[First cell, second row]]></Label>
						</ContentView>
						<ContentView Padding="0,5,0,5" HorizontalOptions="Start">
							<Label LineBreakMode="WordWrap" HorizontalTextAlignment="Start" TextType="Html"><![CDATA[First cell, third row]]></Label>
						</ContentView>
					</StackLayout>
				</ContentView>
			</Frame>
			<Frame Padding="0,0,0,0" BorderColor="Gray" Grid.Column="1" Grid.Row="1">
				<ContentView Padding="5,2,5,2">
					<StackLayout>
						<ContentView Padding="0,5,0,5" HorizontalOptions="Start">
							<Label LineBreakMode="WordWrap" HorizontalTextAlignment="Start" TextType="Html"><![CDATA[Second cell, first row]]></Label>
						</ContentView>
						<ContentView Padding="0,5,0,5" HorizontalOptions="Start">
							<Label LineBreakMode="WordWrap" HorizontalTextAlignment="Start" TextType="Html"><![CDATA[Second cell, second row]]></Label>
						</ContentView>
						<ContentView Padding="0,5,0,5" HorizontalOptions="Start">
							<Label LineBreakMode="WordWrap" HorizontalTextAlignment="Start" TextType="Html"><![CDATA[Second cell, third row]]></Label>
						</ContentView>
					</StackLayout>
				</ContentView>
			</Frame>
			<Frame Padding="0,0,0,0" BorderColor="Gray" Grid.Column="0" Grid.Row="2">
				<ContentView Padding="5,2,5,2">
					<StackLayout>
						<ContentView Padding="0,5,0,5" HorizontalOptions="Start">
							<Label LineBreakMode="WordWrap" HorizontalTextAlignment="Start" TextType="Html"><![CDATA[Third cell, first row]]></Label>
						</ContentView>
						<ContentView Padding="0,5,0,5" HorizontalOptions="Start">
							<Label LineBreakMode="WordWrap" HorizontalTextAlignment="Start" TextType="Html"><![CDATA[Third cell, second row]]></Label>
						</ContentView>
						<ContentView Padding="0,5,0,5" HorizontalOptions="Start">
							<Label LineBreakMode="WordWrap" HorizontalTextAlignment="Start" TextType="Html"><![CDATA[Third cell, third row]]></Label>
						</ContentView>
					</StackLayout>
				</ContentView>
			</Frame>
			<Frame Padding="0,0,0,0" BorderColor="Gray" Grid.Column="1" Grid.Row="2">
				<ContentView Padding="5,2,5,2">
					<StackLayout>
						<ContentView Padding="0,5,0,5" HorizontalOptions="Start">
							<Label LineBreakMode="WordWrap" HorizontalTextAlignment="Start" TextType="Html"><![CDATA[Fourth cell, first row]]></Label>
						</ContentView>
						<ContentView Padding="0,5,0,5" HorizontalOptions="Start">
							<Label LineBreakMode="WordWrap" HorizontalTextAlignment="Start" TextType="Html"><![CDATA[Fourth cell, second row]]></Label>
						</ContentView>
						<ContentView Padding="0,5,0,5" HorizontalOptions="Start">
							<Label LineBreakMode="WordWrap" HorizontalTextAlignment="Start" TextType="Html"><![CDATA[Fourth cell, third row]]></Label>
						</ContentView>
					</StackLayout>
				</ContentView>
			</Frame>
		</Grid>
	</ContentView>
	<ContentView Padding="0,5,0,5" HorizontalOptions="Start">
		<Label LineBreakMode="WordWrap" HorizontalTextAlignment="Start" TextType="Html"><![CDATA[The purpose is to see if footnotes<sup id="fnref-2"><a href="#fn-2" class="footnote-ref">2</a></sup> and tables with complex cells interfere with each other.]]></Label>
	</ContentView>
	<BoxView HeightRequest="1" BackgroundColor="Gray" HorizontalOptions="FillAndExpand" Margin="0,5,0,5" />
	<Grid RowSpacing="0" ColumnSpacing="0">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<ContentView Margin="0,5,2,5" Grid.Column="0" Grid.Row="0" Scale="0.75" TranslationY="-5">
			<Label Text="1" />
		</ContentView>
		<ContentView Grid.Column="1" Grid.Row="0">
			<ContentView Padding="0,5,0,5" HorizontalOptions="Start">
				<Label LineBreakMode="WordWrap" HorizontalTextAlignment="Start" TextType="Html"><![CDATA[Like this one, presented <strong><u>before</u></strong> the table.]]></Label>
			</ContentView>
		</ContentView>
		<ContentView Margin="0,5,2,5" Grid.Column="0" Grid.Row="1" Scale="0.75" TranslationY="-5">
			<Label Text="2" />
		</ContentView>
		<ContentView Grid.Column="1" Grid.Row="1">
			<ContentView Padding="0,5,0,5" HorizontalOptions="Start">
				<Label LineBreakMode="WordWrap" HorizontalTextAlignment="Start" TextType="Html"><![CDATA[Like this one, presented <strong><u>after</u></strong> the table.]]></Label>
			</ContentView>
		</ContentView>
	</Grid>
</StackLayout>