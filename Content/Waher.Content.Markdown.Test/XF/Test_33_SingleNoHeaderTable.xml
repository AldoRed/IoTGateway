<StackLayout xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" Spacing="0" xmlns="http://xamarin.com/schemas/2014/forms">
	<ContentView Padding="0,5,0,5">
		<Grid RowSpacing="-2" ColumnSpacing="-2">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>
			<Frame Padding="0,0,0,0" BorderColor="Gray" Grid.Column="0" Grid.Row="0">
				<ContentView Padding="5,2,5,2" HorizontalOptions="Start">
					<Label LineBreakMode="WordWrap" HorizontalTextAlignment="Start" TextType="Html"><![CDATA[No]]></Label>
				</ContentView>
			</Frame>
			<Frame Padding="0,0,0,0" BorderColor="Gray" Grid.Column="1" Grid.Row="0">
				<ContentView Padding="5,2,5,2" HorizontalOptions="Center">
					<Label LineBreakMode="WordWrap" HorizontalTextAlignment="Start" TextType="Html"><![CDATA[headers]]></Label>
				</ContentView>
			</Frame>
			<Frame Padding="0,0,0,0" BorderColor="Gray" Grid.Column="2" Grid.Row="0">
				<ContentView Padding="5,2,5,2" HorizontalOptions="Start">
					<Label LineBreakMode="WordWrap" HorizontalTextAlignment="Start" TextType="Html"><![CDATA[table]]></Label>
				</ContentView>
			</Frame>
		</Grid>
	</ContentView>
</StackLayout>