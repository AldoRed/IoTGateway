<?xml-model href="http://waher.se/Schema/Layout2D.xsd"?>
<Layout2D xmlns="http://waher.se/Schema/Layout2D.xsd"
    background="ThemeBackground" font="Text" textColor="Black">
    <SolidBackground id="ThemeBackground" color="{Theme.BackgroundColor}" />
    <SolidBackground id="IoTGateway" color="{Alpha('Orange',128)}" />
    <Font id="Text" name="Arial" size="20pt" color="Black" />
    <Grid columns="1">
        <Cell>
            <Vertical>
                <Rectangle fill="IoTGateway">
                    <Label text="OS Firewall" x="50%" y="50%" halign="Center" valign="Center" />
                </Rectangle>
                <Rectangle fill="IoTGateway">
                    <Label text="HTTP alt." x="50%" y="50%" halign="Center" valign="Center" />
                </Rectangle>
            </Vertical>
        </Cell>
    </Grid>
</Layout2D>